{
  "$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
  "extends": ["ultracite"],
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    }
  },
  "css": {
    "linter": {
      "enabled": false
    }
  },
  "linter": {
    "rules": {
      "performance": {
        "noDynamicNamespaceImportAccess": "error",
        "noNamespaceImport": "off"
      }
    }
  }
}
